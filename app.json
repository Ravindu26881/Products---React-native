{
  "expo": {
    "name": "Bazario",
    "slug": "Bazario",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ravindu26881.Bazario"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.ravindu26881.Bazario"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "name": "Bazario - Local Marketplace",
      "shortName": "Bazario",
      "description": "Discover amazing products from local businesses",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait",
      "themeColor": "#ffffff",
      "backgroundColor": "#ffffff",
      "categories": ["shopping", "business", "lifestyle"],
      "icons": [
        {
          "src": "./assets/icon.png",
          "sizes": "1024x1024",
          "type": "image/png",
          "purpose": "any maskable"
        },
        {
          "src": "./assets/adaptive-icon.png",
          "sizes": "192x192",
          "type": "image/png"
        },
        {
          "src": "./assets/favicon.png",
          "sizes": "48x48",
          "type": "image/png"
        }
      ]
    },
    "assetBundlePatterns": [
      "assets/fonts/*"
    ],
    "plugins": [
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "473a31f3-e495-4d5e-8bb8-05e8114c0f67"
      }
    }
  }
}
